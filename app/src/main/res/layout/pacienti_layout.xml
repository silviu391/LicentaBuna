<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/qrPacient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Pacient"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/idPacient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Pacient"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/qrPacient" />
        <TextView
            android:id="@+id/numePacient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Pacient"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/idPacient" />
        <TextView
            android:id="@+id/prenumePacient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Pacient"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/numePacient"/>
        <TextView
            android:id="@+id/cnpPacient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Pacient"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/prenumePacient"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>